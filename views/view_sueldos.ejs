<%- include("templates/header",{titulopag:'Sueldos'})%>
<DIV class="table-data">
    <br><br>
    <h2>Mostrando información de la tabla <%= titulopag%> de la base de datos AdminSystemDB</h2>
    <br><br>
    <table class="table table-striped table-bordered" style="width: 100%; margin:auto;">
        <tr>
            <th>ID</th>
            <th>Nombre trajador</th>
            <th>Apellido paterno</th>
            <th>Apellido materno</th>
            <th>Comision</th>
            <th>Trabajos realizados</th>
            <th>Sueldo estimado</th>
        </tr>

        <%
        if(datosConsulta.length != 0){
            datosConsulta.forEach(function(data){
        %>
                <tr>
                    <td><%=data.id_s%></td>
                    <td><%=data.nombre_t%></td>
                    <td><%=data.apepat_t%></td>
                    <td><%=data.apemat_t%></td>
                    <td><%=data.comision%></td>
                    <td><%=data.trabajos_realizados%></td>
                    <td><%=data.sueldo_estimado%></td>        
                </tr>        
        <%  });
        }
        else{ %>
            <tr>
                <td colspan="7">No se encontró información</td>
            </tr>
        <%}%>
    </table>
</DIV>
<%- include("templates/footer")%>